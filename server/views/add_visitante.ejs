<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Visitante</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" type="imagex/png" href="/images/oracao.png">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<div id="loader">
    <div class="spinner"></div>
</div>

<!-- Barra de navegação -->
<nav class="navbar navbar-expand-lg" id="cabeçalho">
    <div class="container-fluid d-flex align-items-center">
        <a href="/"><img src="/images/assembleia.png" alt="Logo" class="logo-img me-2"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</nav>

<section class="card-principal">
    <div class="card formulario">
        <div class="container mt-4">
            <h2>Registro de Visitante</h2>
            <form id="formVisitante" method="POST" action="/visitante">
  <div class="row g-3">
    <div class="col-md-6">
      <label for="nome" class="form-label">Nome:</label>
      <input type="text" class="form-control" id="nome" name="nome" required>
    </div>
    <div class="col-md-6">
      <label for="cidade" class="form-label">Cidade:</label>
      <input type="text" class="form-control" id="cidade" name="cidade" required>
    </div>
    <div class="col-md-6">
      <label for="pertenceIgreja" class="form-label">Faz parte de alguma igreja?</label>
      <select class="form-control" id="pertenceIgreja" name="pertenceIgreja" required>
        <option value="">Selecione</option>
        <option value="sim">Sim</option>
        <option value="nao">Não</option>
      </select>
    </div>
    <div class="col-md-6" id="campoNomeIgreja" style="display:none;">
      <label for="nomeIgreja" class="form-label">Igreja:</label>
      <input type="text" class="form-control" id="nomeIgreja" name="nomeIgreja">
    </div>
  </div>

  <div class="mt-4">
    <button type="submit" class="btn btn-success">Registrar Visitante</button>
    <a href="/" class="ms-3">Voltar</a>
  </div>
</form>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/loader.js"></script>
<script src="/js/add_visitante.js"></script>

</body>
</html>
