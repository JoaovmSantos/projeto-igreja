<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Histórico de Visitantes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" type="imagex/png" href="/images/oracao.png">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<div id="loader">
    <div class="spinner"></div>
</div>

<!-- Barra de navegação -->
<nav class="navbar navbar-expand-lg" id="cabeçalho">
  <div class="container-fluid d-flex align-items-center">
    <a href="/"><img src="/images/assembleia.png" alt="Logo" class="logo-img me-2"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegação">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>

<div class="container mt-4">
    <h1 class="text-center mb-4">Histórico de Visitantes</h1>
    
    <% if (visitantes.length > 0) { %>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Data</th>
                <th>Nome</th>
                <th>Cidade</th>
                <th>Pertence a Igreja?</th>
                <th>Igreja</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% visitantes.forEach(v => { %>
                <tr>
                    <td>
                        <%= new Date(v.data_visita).toLocaleString("pt-BR", {day: "2-digit", month: "2-digit", year: "numeric"}) %>
                    </td>
                    <td><%= v.nome %></td>
                    <td><%= v.cidade %></td>
                    <td><%= v.pertence_igreja === 'Sim' ? 'Sim' : 'Não' %></td>
                    <td><%= v.nome_igreja || '—' %></td>
                    <td>
                        <form action="/historico-visitantes/delete/<%= v.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Apagar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <p class="text-center fs-4 mt-4">Sem visitantes registrados no histórico.</p>
    <% } %>

    <% if (visitantes.length > 0) { %>
    <div class="text-center mt-4">
        <form id="formApagarTodosVisitantes" action="/historico-visitantes/deleteAll" method="POST">
            <button type="submit" class="btn btn-danger mb-4">Apagar Todos</button>
            <a href="/exportar_visitantes" class="btn btn-primary" target="_blank">Exportar PDF</a>
        </form>        
    </div>
    <% } %>

</div>
<div class="text-center mt-4">
    <a href="/visitantes" class="btn btn-secondary me-2">Voltar</a>
    <a href="/logout" class="btn btn-danger">Sair</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/loader.js"></script>
<script src="/js/scriptHistorico.js"></script>

</body>
</html>
