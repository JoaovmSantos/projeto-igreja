<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos de Oração</title>
    <!-- Link para o Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<!-- Barra de navegação -->
<nav class="navbar navbar-expand-lg" id="cabeçalho">
  <div class="container-fluid d-flex align-items-center">
    
    <!-- Imagem pequena em círculo -->
    <img src="/images/assembleia.png" alt="Logo" class="logo-img me-2">
    
    <a class="navbar-brand fw-bold" href="/">Assembleia de Deus Min. Belém - Osvaldo Cruz</a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegação">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>

<div class="container mt-4">

    <!-- Título da Página -->
    <h1 class="text-center mb-4">Pedidos de Oração Registrados</h1>

    <!-- Tabela de Pedidos -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Número do Pedido</th>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% pedidos.forEach(pedido => { %>
                <tr>
                    <td><%= pedido.id %></td>
                    <td><%= pedido.nome %></td>
                    <td><%= pedido.categoria %></td>
                    <td>
                        <button type="" class="btn btn-success">Lido</button>
                        <button type="" class="btn btn-danger">Apagar</button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<!-- Link para o Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
