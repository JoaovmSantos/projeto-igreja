<!DOCTYPE html>
<html lang="pt-br" class="pagina-pedidos">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>F√© Conectada - Pedidos</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" type="imagex/png" href="/images/oracao.png">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<div id="loader">
    <div class="spinner"></div>
</div>

<!-- Barra de navega√ß√£o -->
<nav class="navbar navbar-expand-lg" id="cabe√ßalho">
    <div class="container-fluid d-flex align-items-center">
        <img src="/images/assembleia.png" alt="Logo" class="logo-img me-2">
        <a class="navbar-brand fw-bold" href="/">Assembleia de Deus Min. Bel√©m - Osvaldo Cruz</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</nav>

<div class="container mt-4">
    <h2 class="text-center mb-4">Pedidos de Ora√ß√£o</h2>

    <section class="card-principal">
        <div class="row justify-content-center">
            <% if (pedidos.length === 0) { %>
                <div class="col-12 text-center mt-5">
                    <h4 class="text-muted">Sem pedidos de ora√ß√£o Pendente</h4>
                </div>
            <% } else { %>
                <% pedidos.forEach(pedido => { %>
                    <div class="col-md-8 mb-3" style="display: flex; justify-content: center;">
                        <div class="card shadow-sm pedido-card" id="pedido">
                            <div class="card-body">
                                <p class="badge bg-primary"><%= pedido.categoria %></p>
                                <h4 class="card-title text-dark"><%= pedido.nome %> pede ora√ß√£o em favor de <%= pedido.beneficiado %> por <%= pedido.categoria %></h4>
                                <div class="d-flex justify-content-between mt-3">
                                    <form action="/lido/<%= pedido.id %>" method="POST">
                                        <button type="submit" class="btn btn-success">Marcar como lido</button>
                                    </form>
                                    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detalhesModal-<%= pedido.id %>">Detalhes</button>
                                </div>
                            </div>
                        </div>
                    </div>
        
                    <!-- Modal de Detalhes -->
                    <div class="modal fade" id="detalhesModal-<%= pedido.id %>" tabindex="-1" aria-labelledby="detalhesModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="detalhesModalLabel">Detalhes do Pedido</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                                </div>
                                <div class="modal-body">
                                    <p><strong>Nome:</strong> <%= pedido.nome %></p>
                                    <p><strong>Beneficiado:</strong> <%= pedido.beneficiado %></p>
                                    <p><strong>Categoria:</strong> <%= pedido.categoria %></p>
                                    <p><strong>Descri√ß√£o:</strong> <%= pedido.descricao ? pedido.descricao : "Sem descri√ß√£o dispon√≠vel." %></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
        
    </section>
    <% if (pedidos.length > 0) { %>
    <div class="text-center mt-5">
        <button id="startPresentationBtn" class="btn btn-primary">Apresentar Tela Cheia üì∫</button>
    </div>

    <div class="text-center mt-4">
        <form id="formMarcarTodos" action="/pedidos/marcarTodos" method="POST" class="text-center mb-3">
            <button type="submit" class="btn btn-success">Marcar Todos como Lido ‚úÖ</button>
        </form>        
        <a href="/historico" class="btn btn-secondary me-2">Ver hist√≥rico</a>
        <a href="/logout" class="btn btn-danger">Sair</a>
    </div>
    <% } %>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/loader.js"></script>
<script src="/js/telaCheia.js"></script>
<script>
document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("formMarcarTodos");

    if (form) {
        form.addEventListener("submit", function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'Tem certeza?',
                text: "Todos os pedidos ser√£o marcados como lido!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#198754',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sim, marcar todos',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    }
});
</script>

</script>

</body>
</html>
