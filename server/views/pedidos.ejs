<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fé Conectada - Pedidos</title>
    <!-- Link para o Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<!-- Barra de navegação -->
<nav class="navbar navbar-expand-lg" id="cabeçalho">
    <div class="container-fluid d-flex align-items-center">
      
      <!-- Imagem pequena em círculo -->
      <img src="/images/assembleia.png" alt="Logo" class="logo-img me-2">
      
      <a class="navbar-brand fw-bold" href="/">Assembleia de Deus Min. Belém - Osvaldo Cruz</a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Alternar navegação">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>

<div class="container mt-4">
    <h2 class="text-center mb-4">Pedidos de Oração</h2>

    <section class="card-principal">
        <div class="row justify-content-center pedido">
            <% pedidos.forEach(pedido => { %>
                <div class="col-md-12">
                    <div class="card mb-3 shadow-sm" id="pedido">
                        <div class="card-body">
                            <span class="badge bg-primary"><%= pedido.categoria %></span>
                            <h3 class="card-title fw-thin"><%= pedido.nome %> pede oração em favor de <%= pedido.beneficiado %> por <%= pedido.categoria %> </h3>
                            <form action="/lido/<%= pedido.id %>" method="POST" class="mt-3">
                                <button type="submit" class="btn btn-success w-100">Marcar como lido</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <section class="card-principal">
        <div class="text-center mt-4">
            <a href="/historico" class="btn btn-secondary me-2">Ver histórico</a>
            <a href="/logout" class="btn btn-danger">Sair</a>
        </div>
    </section>
</div>

<!-- Link para o Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
